<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Pilihkonsul">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/backKonsul"
                android:background="@drawable/button_back"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:text="Back"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="19dp"
                android:textSize="9sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konsultasi"
                android:textStyle="bold"
                android:textSize="23dp"
                android:textColor="#000000"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="70dp"
                android:layout_toRightOf="@+id/backKonsul"/>



        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/konsultan0"
                android:tag="0"
                android:onClick="onCardViewClick"
                android:clickable="true"
                app:cardCornerRadius="20dp"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="45dp"
                app:cardElevation="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:src="@drawable/lah"
                    app:shapeAppearanceOverlay="@style/radius" />

                <Button
                    android:id="@+id/btnkonsul1"
                    android:text="Rian Hilmi\n\Hidayatullah"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:textColor="#ffffff"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="125dp"
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#30000000"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                android:tag="1"
                android:id="@+id/konsultan1"
                app:cardElevation="10dp"
                android:layout_width="150dp"
                android:onClick="onCardViewClick"
                android:clickable="true"
                android:layout_height="180dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:layout_marginTop="30dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:src="@drawable/percobaan2"
                    app:shapeAppearanceOverlay="@style/radius"
                    app:strokeColor="#000000"
                    app:strokeWidth="1dp"/>
                <Button
                    android:id="@+id/btnkonsul2"
                    android:text="Ronaldowati\n\Vinicius Junior"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:textColor="#ffffff"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="125dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#30000000"/>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/konsultan2"
                android:tag="2"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="45dp"
                app:cardCornerRadius="20dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:src="@drawable/lah2"
                    app:shapeAppearanceOverlay="@style/radius" />

                <Button
                    android:id="@+id/btnkonsul3"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="125dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="#20000000"
                    android:text="Joko Lionel\n\Megatron"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                android:id="@+id/konsultan3"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="45dp"
                android:clickable="true">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="200dp"
                    android:src="@drawable/lah5"
                    app:shapeAppearanceOverlay="@style/radius" />

                <Button
                    android:id="@+id/btnkonsul4"
                    android:text="Michael\n\Ahmad Dahlan"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:textColor="#ffffff"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="125dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#30000000"/>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </LinearLayout>

</ScrollView>